<%- include ('../partials/header') %> <%- include ('../partials/nav') %>

<main>
    <div class="container">

      <div class="col"><%- include ('../partials/message') %></div>
      
        <!-- Display planner information here -->
        <% let arr[]; %>
        <% if (cartItem) { %>
          <% cartItem.forEach( cartItem => { %>
            <% arr.add(cartItem); %>
          <% }); %>
          <% }; %>
          
        <% arr.sort((a, b) => a.getDate() - b.getDate()); %>

        <% for(int i = 0; i < arr.length(); i++) { %>
          <div class="row">
            <div class="card">
                <div class="card-header">
                  <%= arr[i].date %>
                </div>
                <div class="card-body">
                  <h5 class="card-title">  Reservation Title / Type
                    <% %>
                  </h5>
                  <p class="card-text">
                    Location: <%= arr[i].location %> <br>
                    Time: <%= arr[i].time %>
                  </p>
                  <a href="/cartItem" class="btn btn-primary"> See More Info </a>
                </div>
              </div>
        </div>
        <% } %>

    </div>
  </main>

<%- include ('../partials/footer') %>