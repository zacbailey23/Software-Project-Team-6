<%- include ('../partials/header') %> <%- include ('../partials/nav') %>

<main>
    <div class="container">

      <div class="col"><%- include ('../partials/message') %></div>
      <% if (error) { %>
        <p class="error-message"><%= error %></p>
      <% } else { %>
        <!-- Display planner information here -->
        <% var vector = []; %>
        <% if (cartItem) { %>
          <% cartItem.forEach( cartItem => { %>
            <% vector.push(cartItem); %>
          <% }); %>
          <% }; %>
          
        <% vector.sort((a, b) => a.getDate() - b.getDate()); %>

        <% for(int i = 0; i < vector.length(); i++) { %>
          <div class="row">
            <div class="card">
                <div class="card-header">
                  <%= vector.cartItem.date %>
                </div>
                <div class="card-body">
                  <h5 class="card-title">  Reservation Title / Type
                    <% %>
                  </h5>
                  <p class="card-text">
                    Location: <%= vector.cartItem.location %> <br>
                    Time: <%= vector.cartItem.time %>
                  </p>
                  <a href="/cartItem" class="btn btn-primary"> See More Info </a>
                </div>
              </div>
        </div>
        <% } %>
        <% } %>

    </div>
  </main>

<%- include ('../partials/footer') %>