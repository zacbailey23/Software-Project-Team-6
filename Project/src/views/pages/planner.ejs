<%- include ('../partials/header') %> <%- include ('../partials/nav') %>

<main>
    <div class="container">

      <% if (locals.message) { %>
        <div
          class="alert alert-<%- locals.error ? 'danger' : 'success' %>"
          role="alert">
          <%= message %>
        </div>
        <% } %>


        <% var vector = [] %>
        <% if (cartItem) { 
          // create vector and sort each item
          cartItem.forEach( cartItem => {
            vector.push(cartItem);
          });
          }; 
          
          vector.sort();
        %>

        <% // print out vector
        for(int i = 0; i < vector.length(); i++) {
          <div class="row">
            <div class="card">
                <div class="card-header">
                  <%= vector.cartItem.date %>
                </div>
                <div class="card-body">
                  <h5 class="card-title">  Reservation Title / Type
                    
                  </h5>
                  <p class="card-text">
                    Location: <%= vector.cartItem.location %> <br>
                    Time: <%= vector.cartItem.time %>
                  </p>
                  <a href="/cartItem" class="btn btn-primary"> See More Info </a>
                </div>
              </div>
        </div>
        } %>

    </div>
  </main>

<%- include ('../partials/footer') %>